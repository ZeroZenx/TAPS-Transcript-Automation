{
	"name": "student-debt-validator",
	"private": true,
	"workspaces": [],
	"scripts": {
		"install:backend": "npm install",
		"install:frontend": "npm --prefix frontend install",
		"install:all": "npm run install:backend && npm run install:frontend",
		"start:backend": "node backend/server.js",
		"start:frontend": "npm run dev --prefix frontend",
		"dev": "sh -c 'npm run start:backend & npm run start:frontend'",
		"build:frontend": "npm --prefix frontend run build",
		"start:prod": "npm run build:frontend && node backend/server.js",
		"start": "node backend/server.js"
	},
	"dependencies": {
		"@prisma/client": "^5.22.0",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"exceljs": "^4.4.0",
		"express": "^4.19.2",
		"express-rate-limit": "^7.4.0",
		"helmet": "^7.2.0",
		"multer": "^1.4.5-lts.1",
		"xlsx": "^0.18.5"
	},
	"devDependencies": {
		"prisma": "^5.22.0"
	}
}
